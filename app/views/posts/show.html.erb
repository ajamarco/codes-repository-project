<h2>Created by: <%= User.find(@post.user_id).name %></h2>
<h1>Title: <%=@post.title%> </h1>
<h1>Content:</h1> 
<textarea name="post_content" id="post_content" cols="30" rows="10" readonly><%=@post.content%></textarea>

<h2><%= link_to  "Edit post", edit_post_path(@post) %></h2>
<h2><%= link_to  "Delete post", @post, method: :delete, data: {confirm: "Are you sure?"} %></h2>
<h3><%= link_to  "Initial Page", posts_path %></h3>